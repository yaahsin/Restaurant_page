<!-- ./views/show.handlebars -->
<h1 class="mb-1 restaurant-show-title">{{restaurantData.name}}</h1>
<div class="container">
  <div class="functions d-flex justify-content-end">
    {{!-- a只能get 不能post, 若要post需改成form去設定method --}}
    <a href="/restaurants/{{restaurantData._id}}/edit">
      <button class="btn btn-outline-info ">編輯</button>
    </a>
    <a href="/">
      <button type="button" class="btn btn-outline-secondary ml-2">
        返回首頁
      </button>
      <form action="/restaurants/{{ restaurantData._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button class="btn btn-danger" type="submit">刪除</button>
      </form>
    </a>
  </div>

  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurantData.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantData.location}}
        <a href="{{restaurantData.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantData.phone}}
      </p>

      <p class="mb-5">
        {{restaurantData.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurantData.image}}" alt="{{restaurantData.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>